        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Set up a clean and minimalistic design */
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f2ef;
            color: #000;
            margin: 0;
            padding: 0;
        }

        /* Add a container with a max-width to center the content */
        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Style the header */
        header {
            background-color: #fff;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        /* Style the navigation links */
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        nav li {
            margin-right: 20px;
        }

        nav a {
            color: #0077B5;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
            line-height: 20px;
            padding: 12px 0;
            display: inline-block;
            transition: all 0.2s ease-in-out;
        }

        nav a:hover {
            color: #0a66c2;
        }

        /* Style the user profile section */
        section {
            margin-top: 100px;
            display: grid;
            grid-template-columns: 1fr 3fr;
            grid-gap: 30px;
            background-color: #fff;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        section img {
            max-width: 200px;
            border-radius: 50%;
        }

        section h1 {
            font-size: 26px;
            margin-bottom: 10px;
        }

        section h2 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        section p {
            font-size: 16px;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        /* Style the user profile details */
        ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        ul li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        ul li strong {
            font-weight: bold;
            margin-right: 10px;
            display: inline-block;
            min-width: 100px;
        }

        ul li a {
            color: #0077B5;
            text-decoration: none;
            transition: all 0.2s ease-in-out;
        }

        ul li a:hover {
            color: #0a66c2;
        }

        /* Style the user profile footer */
        footer {
            background-color: #fff;
            box-shadow: 0px -2px 6px rgba(0, 0, 0, 0.1);
            padding: 20px 0;
            text-align: center;
        }

        footer p {
            margin: 0;
            font-size: 14px;
            color: #707070;
        }




        nav {
            -webkit-box-shadow: 0 4px 11.5px 2.5px #dddddd;
            -moz-box-shadow: 0 4px 11.5px 2.5px #dddddd;
            box-shadow: 0 4px 11.5px 2.5px #dddddd;
        }

        #brand_img {
            width: 60px;
            height: 71px;
        }

        .title {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .title>h2 {
            color: rgb(34, 3, 212);
            /* color: #3F51B5; */
            font-family: 'Cormorant Garamond', 'Times New Roman';
            font-size: 38px;
            font-weight: 500;
        }

        .nav_items {
            display: flex;
            gap: 40px;
        }

        .nav_texts {
            color: rgb(34, 3, 212);
            font-size: 20px;
            text-decoration: none;
            font-weight: 500;
            transform: 1s;
            padding: 6px;
        }

        nav ul li a,
        nav ul li a:after,
        nav ul li a:before {
            transition: all .5s;
        }

        nav ul li a:hover {
            color: rgb(25, 15, 53);
        }


        /* stroke */
        nav.stroke ul li a,
        nav.fill ul li a {
            position: relative;
        }

        nav.stroke ul li a:after,
        nav.fill ul li a:after {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
            width: 0%;
            content: '.';
            color: transparent;
            background: rgb(255, 255, 255);
            height: 3px;
        }

        nav.stroke ul li a:hover:after {
            width: 100%;
            background: rgb(126, 77, 250);
        }










        .main_bar {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 7%;

        }

        .main_one {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .post_card {
            background-color: #fff;

            width: 700px;
            border: 1px solid rgb(201, 201, 201);
            border-radius: 5px;
        }

        .post_content {
            padding: 2%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid rgb(201, 201, 201);
        }

        .post_content>div {

            display: flex;
            align-items: center;
            gap: 20px;
        }

        .post_image {
            height: 100%;
            width: 100%;
        }

        .profile_pic_on_post {
            border-radius: 50%;
            height: 70px;
            width: 70px;
        }

        .Likes_comments {
            display: flex;
            justify-content: center;
            align-items: center;
            border-top: 1px solid rgb(201, 201, 201);
            padding: 2%;
        }

        .likes {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 33%;

        }


        .comments {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 33%;
        }

        .share {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 33%;
        }

        .like-button:hover {
            transform: scale(1.2);
        }

        .description {
            margin-bottom: 40px;
            margin-top: 20px;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            padding-left: 25px;
        }
    </style>
</head>

